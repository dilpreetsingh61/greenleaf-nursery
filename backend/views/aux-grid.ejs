<!-- Generic Grid Page (Pots, Tools, etc.) -->
<style>
.care-page-header {
    background: linear-gradient(135deg, #1e3c1a 0%, #2d5a27 50%, #3d7a33 100%);
    padding: 150px 20px 100px;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.care-page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 50%, rgba(127, 176, 105, 0.2) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(76, 175, 80, 0.2) 0%, transparent 50%);
    animation: pulse 8s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
}

.care-page-header h1 {
    font-size: 4rem;
    font-weight: 800;
    color: white;
    text-shadow: 3px 5px 15px rgba(0,0,0,0.4);
    margin-bottom: 1.5rem;
    position: relative;
    z-index: 2;
}

.care-page-subtitle {
    font-size: 1.4rem;
    color: rgba(255,255,255,0.95);
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
    line-height: 1.6;
}
    
    .products-section {
        padding: 80px 20px;
        background: linear-gradient(to bottom, #f9fafb 0%, #ffffff 100%);
        min-height: 60vh;
    }
    
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
        max-width: 1400px;
        margin: 0 auto;
    }
    
    .product-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        animation: fadeInUp 0.6s ease-out;
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .product-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 12px 40px rgba(45, 90, 39, 0.2);
    }
    
    .product-image {
        position: relative;
        height: 280px;
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    
    .product-card:hover .product-image img {
        transform: scale(1.1);
    }
    
    .placeholder-image {
        font-size: 4rem;
        color: #cbd5e0;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
    }
    
    .product-badge {
        position: absolute;
        top: 16px;
        right: 16px;
        background: linear-gradient(135deg, #2d5a27, #4a7c3e);
        color: white;
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 12px rgba(45, 90, 39, 0.3);
        z-index: 2;
    }
    
    .product-details {
        padding: 24px;
    }
    
    .product-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 12px;
        line-height: 1.4;
        min-height: 60px;
    }
    
    .product-price {
        margin-bottom: 20px;
    }
    
    .current-price {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2d5a27;
    }
    
    .product-actions {
        display: flex;
        gap: 12px;
    }
    
    .add-to-cart-btn {
        flex: 1;
        background: linear-gradient(135deg, #2d5a27 0%, #4a7c3e 100%);
        color: white;
        border: none;
        padding: 14px 24px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        box-shadow: 0 4px 12px rgba(45, 90, 39, 0.2);
    }
    
    .add-to-cart-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(45, 90, 39, 0.35);
        background: linear-gradient(135deg, #1f4019 0%, #2d5a27 100%);
    }
    
    .add-to-cart-btn:active {
        transform: translateY(0);
    }
    
    .add-to-cart-btn:disabled {
        background: #e2e8f0;
        color: #a0aec0;
        cursor: not-allowed;
        box-shadow: none;
    }
    
    .wishlist-btn {
        background: white;
        border: 2px solid #e2e8f0;
        padding: 14px;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        color: #718096;
        font-size: 1.1rem;
    }
    
    .wishlist-btn:hover {
        border-color: #2d5a27;
        color: #2d5a27;
        transform: scale(1.1);
    }
    
    .empty-state {
        text-align: center;
        padding: 100px 20px;
    }
    
    .empty-state i {
        font-size: 5rem;
        color: #e2e8f0;
        margin-bottom: 24px;
    }
    
    .empty-state h2 {
        font-size: 2rem;
        color: #2d3748;
        margin-bottom: 12px;
    }
    
    .empty-state p {
        color: #718096;
        font-size: 1.1rem;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
        .care-page-header h1 {
            font-size: 2.5rem;
        }
        
        .care-page-subtitle {
            font-size: 1.1rem;
        }
        
        .page-subtitle {
            font-size: 1.1rem;
        }
        
        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }
    }
</style>

<div class="care-page-header">
    <div class="container">
        <h1><%= heading || 'Catalog' %></h1>
        <p class="care-page-subtitle"><%= subheading || '' %></p>
    </div>
</div>

<section class="products-section">
    <div class="container">
        <% if (items && items.length > 0) { %>
        <div class="products-grid">
            <% items.forEach((item, index) => { %>
                <div class="product-card" data-product-id="<%= item.id %>" style="animation-delay: <%= index * 0.1 %>s">
                    <div class="product-image">
                        <% if (item.image && item.image.trim()) { %>
                            <img src="<%= item.image %>" alt="<%= item.name %>" loading="lazy">
                        <% } else { %>
                            <div class="placeholder-image">
                                <i class="fas fa-<%= item.category === 'pots' ? 'box' : (item.category === 'tools' ? 'tools' : 'seedling') %>"></i>
                            </div>
                        <% } %>
                        <% if (item.badge) { %>
                            <div class="product-badge"><%= item.badge %></div>
                        <% } %>
                    </div>
                    <div class="product-details">
                        <h3 class="product-title"><%= item.name %></h3>
                        <div class="product-price">
                            <span class="current-price">‚Çπ<%= Number(item.price).toFixed(0) %></span>
                        </div>
                        <div class="product-actions">
                            <button class="add-to-cart-btn" data-product-id="<%= item.id %>" <% if (!item.instock) { %>disabled<% } %>>
                                <i class="fas fa-shopping-cart"></i> <%= ctaLabel || (item.instock ? 'Add to Cart' : 'Out of Stock') %>
                            </button>
                            <button class="wishlist-btn" title="Add to Wishlist">
                                <i class="fas fa-heart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <% } else { %>
        <div class="empty-state">
            <i class="fas fa-box-open"></i>
            <h2>No Items Found</h2>
            <p>We're currently updating our collection. Check back soon!</p>
        </div>
        <% } %>
    </div>
</section>

<!-- Products data as JSON -->
<script id="products-data" type="application/json">
<%- JSON.stringify(items || []) %>
</script>

<script>
    // Load products data from JSON script tag
    (function() {
        try {
            const productsDataElement = document.getElementById('products-data');
            window.allProductsData = JSON.parse(productsDataElement.textContent);
            console.log('‚úÖ Products loaded for aux-grid:', window.allProductsData.length);
        } catch(e) {
            console.error('‚ùå Error loading products:', e);
            window.allProductsData = [];
        }
        
        // Function to attach event listeners - runs after everything is loaded
        function attachCartButtonListeners() {
            const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
            console.log('üîÑ Attaching listeners to', addToCartButtons.length, 'buttons');
            
            let successCount = 0;
            addToCartButtons.forEach((button, index) => {
                console.log(`Button ${index}: disabled=${button.disabled}, hasAttribute=${button.hasAttribute('disabled')}`);
                
                if (button.disabled) {
                    console.log(`‚è≠Ô∏è Skipping button ${index} - it's disabled`);
                    return;
                }
                
                // Remove any existing listeners by cloning
                const newButton = button.cloneNode(true);
                button.parentNode.replaceChild(newButton, button);
                
                newButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    const productId = parseInt(this.getAttribute('data-product-id'));
                    console.log('üõí Button clicked! Product ID:', productId);
                    
                    if (typeof addToCart === 'function') {
                        console.log('‚úÖ Calling addToCart function...');
                        addToCart(productId);
                    } else {
                        console.error('‚ùå addToCart function not found!');
                        alert('Cart functionality not loaded. Please refresh the page.');
                    }
                });
                successCount++;
            });
            console.log('‚úÖ Event listeners attached to', successCount, 'buttons');
        }
        
        // Wait for window to fully load (including all scripts)
        if (document.readyState === 'complete') {
            attachCartButtonListeners();
        } else {
            window.addEventListener('load', attachCartButtonListeners);
        }
    })();
</script>
