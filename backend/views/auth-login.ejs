<section class="auth-section">
    <div class="auth-card">
        <div class="auth-illustration">
            <i class="fas fa-seedling"></i>
            <h2>Welcome back</h2>
            <p>Grow with us. Sign in to continue.</p>
        </div>
        <form id="loginForm" class="auth-form">
            <h1>Sign in</h1>
            
            <!-- Alert message for authentication required -->
            <div id="authAlert" class="auth-alert" style="display: none;">
                <i class="fas fa-info-circle"></i>
                <span>Please log in to continue to checkout</span>
            </div>
            
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="you@example.com" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="••••••••" required>
            </div>
            <button type="submit" class="btn btn-primary btn-glow btn-large">Login</button>
            <p class="auth-switch">New here? <a href="/auth/register">Create an account</a></p>
        </form>
    </div>
    <style>
        .auth-section{display:grid;place-items:center;min-height:70vh;background:linear-gradient(135deg,#e8f5e9,transparent)}
        .auth-card{display:grid;grid-template-columns:1fr 1fr;gap:2rem;background:#fff;border-radius:16px;box-shadow:0 10px 30px rgba(0,0,0,0.08);overflow:hidden;animation:floatIn .6s ease}
        .auth-illustration{background:linear-gradient(135deg,#a5d6a7,#66bb6a);color:#fff;padding:3rem;display:flex;flex-direction:column;align-items:center;justify-content:center;text-align:center}
        .auth-illustration i{font-size:56px;margin-bottom:1rem;animation:leafBounce 2s infinite}
        .auth-form{padding:2rem 2.5rem;min-width:300px}
        .auth-form h1{margin-bottom:1rem}
        .auth-alert{background:#fff3cd;border:1px solid #ffc107;color:#856404;padding:0.75rem 1rem;border-radius:8px;margin-bottom:1rem;display:flex;align-items:center;gap:0.5rem;animation:slideDown 0.3s ease}
        .auth-alert i{color:#ffc107}
        .form-group{margin-bottom:1rem}
        .form-group input{width:100%;padding:0.8rem 1rem;border:1px solid #e0e0e0;border-radius:10px;transition:box-shadow .2s}
        .form-group input:focus{outline:none;box-shadow:0 0 0 3px rgba(102,187,106,.2)}
        .auth-switch{margin-top:1rem}
        @keyframes floatIn{from{opacity:0;transform:translateY(10px)}to{opacity:1;transform:translateY(0)}}
        @keyframes leafBounce{0%,100%{transform:translateY(0)}50%{transform:translateY(-6px)}}
        @keyframes slideDown{from{opacity:0;transform:translateY(-10px)}to{opacity:1;transform:translateY(0)}}
        @media(max-width:900px){.auth-card{grid-template-columns:1fr}}
    </style>
    <script>
        document.addEventListener('DOMContentLoaded',()=>{
            const form=document.getElementById('loginForm');
            const authAlert=document.getElementById('authAlert');
            
            // Check if redirected from a protected page
            const urlParams=new URLSearchParams(window.location.search);
            const redirectUrl=urlParams.get('redirect');
            if(redirectUrl){
                authAlert.style.display='flex';
                // Update message based on redirect URL
                if(redirectUrl.includes('checkout')){
                    authAlert.querySelector('span').textContent='Please log in to continue to checkout';
                }else{
                    authAlert.querySelector('span').textContent='Please log in to continue';
                }
            }
            
            form.addEventListener('submit',async(e)=>{
                e.preventDefault();
                const btn=form.querySelector('button[type="submit"]');
                const old=btn.innerHTML;btn.innerHTML='<i class="fas fa-spinner fa-spin"></i> Logging in...';btn.disabled=true;
                try{
                    const res=await fetch('/api/auth/login',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({email:form.email.value,password:form.password.value})});
                    const data=await res.json();
                    if(!data.success) throw new Error(data.message||'Login failed');
                    
                    // Redirect to original page or home
                    window.location.href=redirectUrl||'/';
                }catch(err){
                    if(window.showNotification){showNotification(err.message,'error')}else{alert(err.message)}
                }finally{btn.innerHTML=old;btn.disabled=false}
            });
        });
    </script>
</section>

