    <!-- User Authentication Display -->
    <script>
        // Fetch and display user info
        async function loadUserInfo() {
            try {
                const response = await fetch('/api/auth/check-session');
                const data = await response.json();
                
                const navUserContainer = document.getElementById('navUserContainer');
                
                if (data.authenticated && data.user) {
                    // User is logged in - show dropdown
                    const firstName = data.user.name.split(' ')[0];
                    navUserContainer.innerHTML = `
                        <div class="nav-user dropdown">
                            <i class="fas fa-user"></i>
                            <span class="nav-username">${firstName}</span>
                            <div class="dropdown-menu">
                                <a href="/orders" class="dropdown-item">
                                    <i class="fas fa-shopping-bag"></i> My Orders
                                </a>
                                <button id="logoutBtn" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </button>
                            </div>
                        </div>
                    `;
                    
                    // Add logout functionality
                    document.getElementById('logoutBtn').addEventListener('click', async () => {
                        try {
                            await fetch('/api/auth/logout', { method: 'POST' });
                            window.location.href = '/';
                        } catch (error) {
                            console.error('Logout error:', error);
                        }
                    });
                } else {
                    // User not logged in - show login link
                    navUserContainer.innerHTML = `
                        <a href="/auth/login" class="nav-link">Login</a>
                    `;
                }
            } catch (error) {
                console.error('Error loading user info:', error);
                // Default to login link on error
                document.getElementById('navUserContainer').innerHTML = `
                    <a href="/auth/login" class="nav-link">Login</a>
                `;
            }
        }
        
        // Load user info when page loads
        document.addEventListener('DOMContentLoaded', loadUserInfo);
    </script>
</body>
