                <a href="/pots" class="nav-link">Pots</a>
                <a href="/tools" class="nav-link">Tools</a>
                <a href="/care" class="nav-link">Care</a>
                <a href="/services" class="nav-link">Services</a>
                <a href="/contact" class="nav-link">Contact</a>
            </div>

            <!-- Cart and User Icons -->
            <div class="nav-icons">
                <div class="cart-icon" id="cartToggle">
                    <i class="fas fa-shopping-cart"></i>
                    <span class="cart-count" id="cart-count">0</span>
                </div>
                <div class="nav-user-container" id="navUserContainer">
                    <!-- Will be populated by JavaScript -->
                    <a href="/auth/login" class="nav-link" id="loginLink">Login</a>
                </div>
                
                <!-- Mobile Menu Toggle -->
                <div class="hamburger" id="hamburger">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Welcome Pushpendra to GreenLeaf Nursery</h1>
            <p>Discover beautiful plants that bring life to your space</p>
            <button class="hero-btn">Shop Now</button>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <div class="content-container">
            <!-- Sidebar Filters -->
            <aside class="sidebar">
                <div class="filter-section">
                    <h3>Categories</h3>
                    <div class="filter-group">
                        <label class="filter-item">
                            <input type="checkbox" name="category" value="indoor">
                            <span class="checkmark"></span>
                            Indoor Plants
                        </label>
                        <label class="filter-item">
                            <input type="checkbox" name="category" value="outdoor">
                            <span class="checkmark"></span>
                            Outdoor Plants
                        </label>
                        <label class="filter-item">
                            <input type="checkbox" name="category" value="flowering">
                            <span class="checkmark"></span>
                            Flowering Plants
                        </label>
                        <label class="filter-item">
                            <input type="checkbox" name="category" value="succulent">
                            <span class="checkmark"></span>
                            Succulents
                        </label>
                    </div>
                </div>

                <div class="filter-section">
                    <h3>Price Range</h3>
                    <div class="price-filter">
                        <input type="range" id="price-range" min="0" max="200" value="100">
                        <div class="price-labels">
                            <span>₹0</span>
                            <span id="price-value">₹100</span>
                            <span>₹200</span>
                        </div>
                    </div>
                </div>

                <div class="filter-section">
                    <h3>Size</h3>
                    <div class="filter-group">
                        <label class="filter-item">
                            <input type="radio" name="size" value="small">
                            <span class="radiomark"></span>
                            Small (0-1 ft)
                        </label>
                        <label class="filter-item">
                            <input type="radio" name="size" value="medium">
                            <span class="radiomark"></span>
                            Medium (1-3 ft)
                        </label>
                        <label class="filter-item">
                            <input type="radio" name="size" value="large">
                            <span class="radiomark"></span>
                            Large (3+ ft)
                        </label>
                    </div>
                </div>

                <div class="filter-section">
                    <h3>Care Level</h3>
                    <div class="filter-group">
                        <label class="filter-item">
                            <input type="checkbox" name="care" value="easy">
                            <span class="checkmark"></span>
                            Easy Care
                        </label>
                        <label class="filter-item">
                            <input type="checkbox" name="care" value="moderate">
                            <span class="checkmark"></span>
                            Moderate Care
                        </label>
                        <label class="filter-item">
                            <input type="checkbox" name="care" value="expert">
                            <span class="checkmark"></span>
                            Expert Care
                        </label>
                    </div>
                </div>

                <button class="clear-filters-btn">Clear All Filters</button>
            </aside>

            <!-- Products Section -->
            <section class="products-section">
                <!-- Products Header -->
                <div class="products-header">
                    <div class="results-info">
                        <h2>Our Plants</h2>
                        <span class="results-count" id="results-count">Showing 1-12 of 120 products</span>
                    </div>
                    
                    <!-- Sort Options -->
                    <div class="sort-options">
                        <label for="sort-select">Sort by:</label>
                        <select id="sort-select">
                            <option value="featured">Featured</option>
                            <option value="price-low">Price: Low to High</option>
                            <option value="price-high">Price: High to Low</option>
                            <option value="name">Name A-Z</option>
